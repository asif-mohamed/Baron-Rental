# Environment Mode
NODE_ENV=production

# PostgreSQL Configuration
POSTGRES_PASSWORD=postgres_secure_password_change_this
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_change_this
REDIS_PORT=6379

# Platform Ports
PLATFORM_HTTP_PORT=6000
PLATFORM_SSH_PORT=2222
PLATFORM_WS_PORT=6001

# Baron Backend Port
BACKEND_PORT=5000

# Baron Frontend Port
FRONTEND_PORT=3000

# Platform API URL (localhost for local deployment)
PLATFORM_API_URL=http://nexus-platform:6000

# Platform Authentication
PLATFORM_JWT_SECRET=nexus-platform-jwt-secret-change-in-production
PLATFORM_SECRET=shared-secret-for-tenant-communication-change-in-production

# Platform Admin Credentials (SSH + Platform API)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin123!@#Platform

# Baron Backend Authentication
BARON_JWT_SECRET=baron-jwt-secret-change-this-in-production

# Feature Flags
ENABLE_SSH_SERVER=true
ENABLE_WS_SERVER=true
ENABLE_AUTO_DISCOVERY=true

# Logging
LOG_LEVEL=info

# Docker Build Configuration
PLATFORM_DOCKERFILE=Dockerfile
BACKEND_DOCKERFILE=Dockerfile
FRONTEND_DOCKERFILE=Dockerfile

# Development Mode (uncomment for dev mode with hot-reload)
# PLATFORM_DOCKERFILE=Dockerfile.dev
# BACKEND_DOCKERFILE=Dockerfile.dev
# FRONTEND_DOCKERFILE=Dockerfile.dev
# NODE_ENV=development
