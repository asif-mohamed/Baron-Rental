# Platform Server
PLATFORM_PORT=6000
PLATFORM_HOST=localhost

# SSH Server (Read-only access to platform source code for forking)
SSH_PORT=2222
SSH_HOST=0.0.0.0

# Platform Admin Credentials (SSH access + Platform API)
# Used for: SSH login, Platform API authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin123!@#Platform

# Database (Platform metadata - separate from tenant databases)
DATABASE_URL="postgresql://platform_user:platform_pass@localhost:5432/baron_platform"

# Platform API URL (localhost for local deployment, cloud API for production)
# Use localhost when deployed locally, switch to subscription API when available
PLATFORM_API_URL=http://localhost:6000

# JWT Secret (for platform API authentication)
JWT_SECRET=your-super-secret-jwt-key-for-platform-auth-change-in-production

# Platform Shared Secret (for tenant communication)
PLATFORM_SECRET=shared-secret-for-tenant-communication-change-in-production

# Service Registry (where tenant instances run)
SERVICE_REGISTRY_URL=http://localhost:5000

# WebSocket Server (for real-time tenant communication)
WS_PORT=6001

# Feature Flags (set to 'false' to disable, enabled by default)
ENABLE_SSH_SERVER=true
ENABLE_WS_SERVER=true
ENABLE_AUTO_DISCOVERY=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/platform.log

# Tenant Configuration Storage
CONFIG_STORAGE_PATH=./data/tenants

# Platform Features
ENABLE_SSH_SERVER=true
ENABLE_WS_SERVER=true
ENABLE_AUTO_DISCOVERY=true

# Security
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
ENABLE_API_KEY_AUTH=true

# Multi-Tenant Settings
MAX_TENANTS=100
DEFAULT_TENANT_DB_TYPE=postgresql
ENABLE_TENANT_ISOLATION=true
