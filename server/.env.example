# Database (Baron business data)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/baron_db"

# Platform API URL (for service discovery and health checks)
# Use localhost for local deployment, cloud API when production platform available
PLATFORM_API_URL=http://localhost:6000

# JWT Secret (for Baron application authentication)
JWT_SECRET="baron-jwt-secret-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=5000
NODE_ENV="development"

# CORS
CLIENT_URL="http://localhost:5173"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760

# Email (Optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""

# SMS (Optional)
SMS_API_KEY=""
SMS_API_URL=""
